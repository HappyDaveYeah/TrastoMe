<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content">

        <TextView
            android:text="Serie - Composicio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:layout_marginTop="4dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:id="@+id/item_row" />

        <TextView
            android:text="dd-mm-yyyy hh:mm:ss"
            android:id="@+id/contacte_row"
            android:layout_marginBottom="6dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TextView
            android:text="15/01/2015"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
            android:layout_marginTop="4dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="?android:attr/listPreferredItemPaddingRight"
            android:gravity="top"

            android:textColor="#7CBBCC"
            android:id="@+id/data_row" />

    </LinearLayout>
</LinearLayout>